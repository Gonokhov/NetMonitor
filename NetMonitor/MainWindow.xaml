<Window x:Class="NetMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetMonitor"
        mc:Ignorable="d"
        Title="NetMonitor" Height="90" Width="200" WindowStyle="None" Topmost="True" AllowsTransparency="True" Background="#8C000000" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="UploadSpeed" Content="Upload" Height="30" VerticalAlignment="Top" Margin="10,10,35,0" FontFamily="Russo One" FontSize="16" Foreground="#FFCF4141"  />
        <Label x:Name="DownloadSpeed" Content="Download" Height="30" VerticalAlignment="Top" Margin="10,50,35,0" FontFamily="Russo One" FontSize="16" Foreground="#FF40C157" />
        <Grid Background="Black" Opacity="0" PreviewMouseDown="Grid_PreviewMouseDown"/>
        <Button x:Name="Close" Height="15" Width="15" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5" Click="Close_Click" >
            <Button.Background>
                <ImageBrush ImageSource="close.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
